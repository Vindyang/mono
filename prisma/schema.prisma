generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma/client"
}

datasource db {
  provider = "postgresql"
}

// ==========================================
// AUTHENTICATION (Supabase Auth - User managed in Supabase)
// ==========================================

model user {
  id            String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId        Int       @unique @default(autoincrement()) // Legacy/Sequential ID (e.g. 1, 2, 3)
  name          String
  email         String
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Application relations
  workspaceMemberships workspaceMember[]
  createdTasks         task[]            @relation("TaskCreator")
  assignedTasks        taskAssignee[]
  comments             comment[]
  activityLogs         activityLog[]
  sentInvitations      invitation[]      @relation("InvitationSender")

  @@unique([email])
  @@map("user")
}

// ... (skipping unchanged parts)

// ==========================================
// WORKSPACE & TEAM MANAGEMENT
// ==========================================

model workspace {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  members     workspaceMember[]
  projects    project[]
  invitations invitation[]

  @@index([slug])
  @@map("workspace")
}

model workspaceMember {
  id          Int                  @id @default(autoincrement())
  workspaceId Int
  userId      String               @db.Uuid
  role        WorkspaceMemberRole  @default(MEMBER)
  status      MemberStatus         @default(ACTIVE)
  joinedAt    DateTime             @default(now())
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt

  // Relations
  workspace          workspace         @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user               user              @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectAssignments projectMember[]

  @@unique([workspaceId, userId])
  @@index([workspaceId])
  @@index([userId])
  @@index([workspaceId, role])
  @@map("workspace_member")
}

model invitation {
  id          Int                 @id @default(autoincrement())
  workspaceId Int
  email       String
  role        WorkspaceMemberRole @default(MEMBER)
  status      InvitationStatus    @default(PENDING)
  invitedById String              @db.Uuid
  invitedAt   DateTime            @default(now())
  expiresAt   DateTime
  acceptedAt  DateTime?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  // Relations
  workspace   workspace           @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  invitedBy   user                @relation("InvitationSender", fields: [invitedById], references: [id], onDelete: Cascade)

  @@unique([workspaceId, email])
  @@index([workspaceId])
  @@index([email])
  @@index([status])
  @@index([expiresAt])
  @@map("invitation")
}

// ...

// ==========================================
// PROJECTS
// ==========================================

model project {
  id          Int           @id @default(autoincrement())
  workspaceId Int
  name        String
  description String?
  color       String        @default("#3b82f6")
  dueDate     DateTime?
  status      ProjectStatus @default(ACTIVE)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relations
  workspace   workspace       @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  tasks       task[]
  members     projectMember[]

  @@index([workspaceId])
  @@index([workspaceId, status])
  @@index([dueDate])
  @@map("project")
}

model projectMember {
  id                Int               @id @default(autoincrement())
  projectId         Int
  workspaceMemberId Int
  role              ProjectMemberRole @default(MEMBER)
  assignedAt        DateTime          @default(now())
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  // Relations
  project         project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  workspaceMember workspaceMember @relation(fields: [workspaceMemberId], references: [id], onDelete: Cascade)

  @@unique([projectId, workspaceMemberId])
  @@index([projectId])
  @@index([workspaceMemberId])
  @@map("project_member")
}

// ==========================================
// TASKS
// ==========================================

model task {
  id          Int          @id @default(autoincrement())
  projectId   Int
  createdById String       @db.Uuid
  title       String
  description String?      @db.Text
  status      TaskStatus   @default(TODO)
  priority    TaskPriority?
  dueDate     DateTime?
  image       String?
  position    Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  project     project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdBy   user           @relation("TaskCreator", fields: [createdById], references: [id], onDelete: Restrict)
  assignees   taskAssignee[]
  comments    comment[]
  attachments attachment[]
  activities  activityLog[]

  @@index([projectId])
  @@index([createdById])
  @@index([status])
  @@index([priority])
  @@index([dueDate])
  @@index([projectId, status])
  @@index([projectId, status, position])
  @@index([createdAt])
  @@map("task")
}

model taskAssignee {
  id         Int      @id @default(autoincrement())
  taskId     Int
  userId     String   @db.Uuid
  assignedAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  task       task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user       user     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([taskId, userId])
  @@index([taskId])
  @@index([userId])
  @@map("task_assignee")
}

model comment {
  id        Int      @id @default(autoincrement())
  taskId    Int
  userId    String   @db.Uuid
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  task      task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
  @@index([taskId, createdAt])
  @@map("comment")
}

model attachment {
  id        Int      @id @default(autoincrement())
  taskId    Int
  fileName  String
  fileUrl   String
  fileSize  Int?
  mimeType  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  task      task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@map("attachment")
}

// ...

model activityLog {
  id          Int            @id @default(autoincrement())
  taskId      Int?
  userId      String         @db.Uuid
  action      ActivityAction
  entityType  String
  entityId    String
  metadata    Json?
  createdAt   DateTime       @default(now())

  // Relations
  task        task?          @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user        user           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
  @@index([entityType, entityId])
  @@index([createdAt])
  @@map("activity_log")
}

// ==========================================
// ENUMS
// ==========================================

enum WorkspaceMemberRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum MemberStatus {
  ACTIVE
  OFFLINE
  BUSY
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
  CANCELLED
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
  COMPLETED
}

enum ProjectMemberRole {
  LEAD
  MEMBER
  VIEWER
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum ActivityAction {
  CREATED
  UPDATED
  DELETED
  ASSIGNED
  UNASSIGNED
  COMMENTED
  STATUS_CHANGED
  PRIORITY_CHANGED
}
